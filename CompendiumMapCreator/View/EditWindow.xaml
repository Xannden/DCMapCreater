<Window x:Class="CompendiumMapCreator.View.EditWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:CompendiumMapCreator.View"
		WindowStyle="None"
		WindowStartupLocation="Manual"
		ResizeMode="NoResize"
		KeyDown="Window_KeyDown"
		mc:Ignorable="d"
		Title="EditWindow" Height="50" Width="200">
	<Grid>
		<TextBox TextWrapping="WrapWithOverflow" Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
	</Grid>
</Window>