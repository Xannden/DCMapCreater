<Window x:Class="CompendiumMapCreator.View.ShortcutsWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:CompendiumMapCreator.View"
		ResizeMode="NoResize"
		WindowStartupLocation="CenterOwner"
		mc:Ignorable="d"
		Title="ShortcutsWindow" Height="330" Width="650">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<StackPanel Margin="10,0,0,0">
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Ctrl+N" />
				<TextBlock Text=": " />
				<TextBlock Text="New Image" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Ctrl+E" />
				<TextBlock Text=": " />
				<TextBlock Text="Export Image" />
			</StackPanel>

			<TextBlock />

			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Mouse Wheel" />
				<TextBlock Text=": " />
				<TextBlock Text="Scroll Up/Down" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Shift+Mouse Wheel" />
				<TextBlock Text=": " />
				<TextBlock Text="Scroll Left/Right" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Space+Mouse" />
				<TextBlock Text=": " />
				<TextBlock Text="Pan Image" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Ctrl+Mouse Wheel" />
				<TextBlock Text=": " />
				<TextBlock Text="Zoom Image" />
			</StackPanel>
		</StackPanel>

		<StackPanel Grid.Column="1">
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Ctrl+S" />
				<TextBlock Text=": " />
				<TextBlock Text="Save" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Ctrl+Shift+S" />
				<TextBlock Text=": " />
				<TextBlock Text="Save As" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Ctrl+L" />
				<TextBlock Text=": " />
				<TextBlock Text="Load Project" />
			</StackPanel>

			<TextBlock />

			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Ctrl+Z" />
				<TextBlock Text=": " />
				<TextBlock Text="Undo" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Ctrl+Y" />
				<TextBlock Text=": " />
				<TextBlock Text="Redo" />
			</StackPanel>

			<TextBlock />

			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Ctrl+C" />
				<TextBlock Text=": " />
				<TextBlock Text="Copy Selected" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Ctrl+V" />
				<TextBlock Text=": " />
				<TextBlock Text="Paste Copied" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Del" />
				<TextBlock Text=": " />
				<TextBlock Text="Delete Selected" />
			</StackPanel>

			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Shift" />
				<TextBlock Text=": " />
				<TextBlock Text="Make Selected Transparent" />
			</StackPanel>

			<TextBlock />

			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Ctrl+Click" />
				<TextBlock Text=": " />
				<TextBlock Text="Select Multiple" />
			</StackPanel>

			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Ctrl+D" />
				<TextBlock Text=": " />
				<TextBlock Text="Deselect all" />
			</StackPanel>
		</StackPanel>
		<StackPanel Grid.Column="2">

			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="1" />
				<TextBlock Text=": " />
				<TextBlock Text="Select Cursor" />
			</StackPanel>

			<TextBlock />

			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Up" />
				<TextBlock Text=": " />
				<TextBlock Text="Move Selected Up" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Down" />
				<TextBlock Text=": " />
				<TextBlock Text="Move Selected Down" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Left" />
				<TextBlock Text=": " />
				<TextBlock Text="Move Selected Left" />
			</StackPanel>
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<TextBlock Text="Right" />
				<TextBlock Text=": " />
				<TextBlock Text="Move Selected Right" />
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>